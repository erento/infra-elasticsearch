# highest level .editorconfig file
root = true

# general rules - UNIX style
[*!{.go}]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# JSON files, Shell scripts, JS files, Nginx files
[*.{json,sh,js},nginx/*]
indent_size = 4

# MD files
[*.md]
trim_trailing_whitespace = false
